<h2>Create Item</h2>
<%= form_with model: @item do |f| %>
    <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :cost_cents, 'Cost (in cents)' %>
        <%= f.number_field :cost_cents, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :listing_price_cents, 'Listing Price (in cents)' %>
        <%= f.number_field :listing_price_cents, class: 'form-control' %>
    </div>
    <div class="form-group">
        <%= f.label :brand  %>
        <%= f.collection_select :brand_id, Brand.all, :id, :name, {include_blank: 'Choose a brand...'}, {:class => 'form-control'} %>
    </div>
    <div class="form-group">
        <%= f.fields_for :brand do |bb| %>
            <%= bb.label :new_brand, 'Or create a new brand...'  %>
            <%= bb.text_field :name, class: 'form-control' %>
        <% end %>
    </div>
    <div class="form-group">
        <%= f.label :store  %>
        <%= f.collection_select :store_id, Store.all, :id, :name, {include_blank: 'Choose a store...'}, {:class => 'form-control'} %>
    </div>
    <div class="form-group">
        <%= f.fields_for :store do |sb| %>
            <%= sb.label :new_store, 'Or create a new store...'  %>
            <%= sb.text_field :name, class: 'form-control' %>
        <% end %>
    </div>
    <%= f.submit 'Create Item', :class => 'btn btn-success' %>
<% end %>